@page
@model IndexModel
@{
    ViewData["Title"] = "Josiah's Favorite Song";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/TestVS.css">
</head>
<body>
    <div class="container">
        <h1>Josiah's Favorite Song</h1>
        <div class="video-container">
            <video width="560" height="315" controls>
                <source src="~/videos/WK.mp4" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
        <div class="animated-box"></div>
    </div>
    <script src="~/js/TestVS.js"></script>
</body>
</html>
